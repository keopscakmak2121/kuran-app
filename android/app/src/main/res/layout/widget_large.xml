<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="6dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Namaz Vakitleri"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/widget_date_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Ekim"
            android:textSize="10sp"
            android:textColor="#CCCCCC"/>
    </LinearLayout>

    <!-- Next Prayer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#10B981"
        android:padding="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/widget_next_prayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İmsak"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/widget_remaining"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2s 15dk kaldı"
                android:textSize="10sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

        <TextView
            android:id="@+id/widget_next_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05:30"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- Prayer Times Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="#2D3748"
                android:layout_marginEnd="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="İmsak"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/time_imsak_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05:30"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="#2D3748"
                android:layout_marginStart="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Güneş"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/time_gunes_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07:00"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="#2D3748"
                android:layout_marginEnd="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Öğle"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/time_ogle_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:15"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="#2D3748"
                android:layout_marginStart="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="İkindi"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/time_ikindi_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:00"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="#2D3748"
                android:layout_marginEnd="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Akşam"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/time_aksam_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18:30"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="6dp"
                android:background="#2D3748"
                android:layout_marginStart="2dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yatsı"
                    android:textSize="11sp"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/time_yatsi_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="#10B981"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>