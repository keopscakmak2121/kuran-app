<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#2196F3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Namaz Vakitleri"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView android:id="@+id/imsak_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İmsak"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            <TextView android:id="@+id/imsak_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView android:id="@+id/gunes_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Güneş"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            <TextView android:id="@+id/gunes_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView android:id="@+id/ogle_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Öğle"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            <TextView android:id="@+id/ogle_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView android:id="@+id/ikindi_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="İkindi"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            <TextView android:id="@+id/ikindi_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView android:id="@+id/aksam_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akşam"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            <TextView android:id="@+id/aksam_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView android:id="@+id/yatsi_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yatsı"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
            <TextView android:id="@+id/yatsi_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
