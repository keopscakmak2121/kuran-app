<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/notification_bg"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icon"
            android:src="@mipmap/ic_launcher"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/location"
            android:text="Gaziantep"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/date"
            android:text="29/10 Çarşamba"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hijri"
        android:text="1442, Recep 8 - Sabaha : 07:17"
        android:textSize="14sp"
        android:textColor="#333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDD"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"/>

    <TableLayout
        android:id="@+id/prayer_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <TextView android:id="@+id/imsak_name" android:text="İmsak" android:textStyle="bold"/>
            <TextView android:id="@+id/sabah_name" android:text="Sabah" android:textStyle="bold"/>
            <TextView android:id="@+id/gunes_name" android:text="Güneş" android:textStyle="bold"/>
            <TextView android:id="@+id/ogle_name" android:text="Öğle" android:textStyle="bold"/>
            <TextView android:id="@+id/ikindi_name" android:text="İkindi" android:textStyle="bold"/>
            <TextView android:id="@+id/aksam_name" android:text="Akşam" android:textStyle="bold"/>
            <TextView android:id="@+id/yatsi_name" android:text="Yatsı" android:textStyle="bold"/>
        </TableRow>
        <TableRow>
            <TextView android:id="@+id/imsak_time" android:text="05:47"/>
            <TextView android:id="@+id/sabah_time" android:text="06:06"/>
            <TextView android:id="@+id/gunes_time" android:text="07:06"/>
            <TextView android:id="@+id/ogle_time" android:text="12:49"/>
            <TextView android:id="@+id/ikindi_time" android:text="15:53"/>
            <TextView android:id="@+id/aksam_time" android:text="18:22"/>
            <TextView android:id="@+id/yatsi_time" android:text="19:37" android:textColor="#F00"/>
        </TableRow>
    </TableLayout>
</LinearLayout>