<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Namaz Vakitleri"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/widget_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 Ekim"
            android:textSize="11sp"
            android:textColor="#CCCCCC"/>
    </LinearLayout>

    <!-- Prayer Times List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@android:drawable/divider_horizontal_bright"
        android:showDividers="middle">

        <!-- İmsak -->
        <LinearLayout
            android:id="@+id/prayer_imsak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="İmsak"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/time_imsak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:30"
                android:textSize="12sp"
                android:textColor="#CCCCCC"/>
        </LinearLayout>

        <!-- Güneş -->
        <LinearLayout
            android:id="@+id/prayer_gunes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Güneş"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/time_gunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00"
                android:textSize="12sp"
                android:textColor="#CCCCCC"/>
        </LinearLayout>

        <!-- Öğle -->
        <LinearLayout
            android:id="@+id/prayer_ogle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Öğle"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/time_ogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:15"
                android:textSize="12sp"
                android:textColor="#CCCCCC"/>
        </LinearLayout>

        <!-- İkindi -->
        <LinearLayout
            android:id="@+id/prayer_ikindi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="İkindi"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/time_ikindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00"
                android:textSize="12sp"
                android:textColor="#CCCCCC"/>
        </LinearLayout>

        <!-- Akşam -->
        <LinearLayout
            android:id="@+id/prayer_aksam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Akşam"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/time_aksam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:30"
                android:textSize="12sp"
                android:textColor="#CCCCCC"/>
        </LinearLayout>

        <!-- Yatsı -->
        <LinearLayout
            android:id="@+id/prayer_yatsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yatsı"
                android:textSize="12sp"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/time_yatsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:00"
                android:textSize="12sp"
                android:textColor="#CCCCCC"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>